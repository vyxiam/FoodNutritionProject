<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outside shape that will be the stroke color -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="360"
                android:startColor="@color/gradient_purple"
                android:endColor="@color/gradient_ocean"
                android:type="linear" />
            <size android:width="150dp" android:height="150dp" />
        </shape>
    </item>

    <!-- Inside shape with transparent color -->
    <!-- This item is used to represent, the actual image will cover this part-->
    <item android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">>
        <shape android:shape="oval">
            <solid android:color="@android:color/black" />
        </shape>
    </item>
</layer-list>